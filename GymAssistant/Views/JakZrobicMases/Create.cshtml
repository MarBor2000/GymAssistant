@model GymAssistant.Models.JakZrobicMase

@{
    ViewData["Title"] = "Create";
}

<h1>Stwórz poradę odnośnie robienia masy</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sposob" class="control-label">Sposób</label>
                <input asp-for="Sposob" class="form-control" />
                <span asp-validation-for="Sposob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label">Opis</label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}