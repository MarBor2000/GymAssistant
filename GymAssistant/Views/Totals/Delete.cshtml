@model GymAssistant.Models.Total

@{
    ViewData["Title"] = "Delete";
}

<h3>Czy na pewno chcesz usunąć ten total?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Data totalu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTraining)
        </dd>
        <dt class = "col-sm-2">
            Wyciskanie leżąc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.lawa)
        </dd>
        <dt class = "col-sm-2">
            Przysiad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.przysiad)
        </dd>
        <dt class = "col-sm-2">
            Martwy ciąg
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.martwy)
        </dd>
        <dt class = "col-sm-2">
            Total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.total)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="iD" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>