@model GymAssistant.Models.Plan

@{
    ViewData["Title"] = "Details";
}

<h1>Plan</h1>

<div>
    <h4>Plan</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa ćwiczenia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Opis
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Data rozpoczęcia treningu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTraining)
        </dd>
        <dt class = "col-sm-2">
            Koniec treningu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTraining)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a> |
    <a asp-action="Index">Powrót do listy</a>
</div>