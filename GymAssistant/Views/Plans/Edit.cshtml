@model GymAssistant.Models.Plan

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj</h1>

<h4>Plan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Nazwa planu
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                Rozpisane ćwiczenia
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                Data rozpoczęcia treningu
                <input asp-for="StartTraining" class="form-control" />
                <span asp-validation-for="StartTraining" class="text-danger"></span>
            </div>
            <div class="form-group">
                Data skończenia treningu
                <input asp-for="EndTraining" class="form-control" />
                <span asp-validation-for="EndTraining" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do planów</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}